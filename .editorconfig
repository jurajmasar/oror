# editorconfig.org

root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rb]
indent_style = space

[*.erb]
indent_style = space
indent_size = 2

[*.rake]
indent_style = space
indent_size = 2

[*.haml]
indent_style = space

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_size = 2

[*.less]
indent_size = 2

[*.coffee]
indent_size = 2
indent_style = space
